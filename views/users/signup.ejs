<% layout('/layout/boilerplate') -%>
<div class="row mt-3">
    <h2 class="col-8 offset-4">SignUp on WanderLust</h2>
    <div class="col-6 offset-3 login">
        <form action="/signup" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label" class="needs-validation" novalidate>Username:</label>
                <input
                  name="username"
                  id="username"
                  placeholder="Enter Username"
                  type="text"
                  class="form-control"
                  required
                />
                <div class="valid-feedback">Looks Good!</div> <%# bootstrap %>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label" class="needs-validation" novalidate>Email:</label>
                <input
                  name="email"
                  id="email"
                  placeholder="Enter Email"
                  type="email"
                  class="form-control"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="password" class="form-label" class="needs-validation" novalidate>Password:</label>
                <input
                  name="password"
                  id="password"
                  placeholder="Enter Password"
                  type="text"
                  class="form-control"
                  required
                />
              </div>
              <button class="btn btn-success loginbtn">SignUp</button>
        </form>
    </div>
</div>