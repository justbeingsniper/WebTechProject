<% layout('/layout/boilerplate') -%>

    <div class="new-form ">
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="enter title"
          type="text"
          class="form-control"
          value="<%= listing.title %>"
          required
        />
        <div class="invalid-feedback">Please enter valid title</div><%# bootstrap %>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="enter description"
          class="form-control"
          required
        ><%= listing.description %></textarea
        >
        <div class="invalid-feedback">Please enter valid description</div><%# bootstrap %>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input
          name="listing[image]"
          placeholder="enter image URL/Link"
          type="text"
          class="form-control"
          value="<%= listing.image %>"
        />
        
      </div>
      <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input
          name="listing[price]"
          placeholder="enter price"
          type="number"
          class="form-control"
          value="<%= listing.price %>"
          required
        />
        <div class="invalid-feedback">Please enter valid price</div><%# bootstrap %>
      </div>
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input
          name="listing[country]"
          placeholder="enter country"
          type="text"
          class="form-control"
          value="<%= listing.country %>"
          required
        />
        <div class="invalid-feedback">Please enter valid country name</div><%# bootstrap %>
      </div>
    </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="enter location"
          type="text"
          class="form-control"
          value="<%= listing.location %>"
          required
        />
        <div class="invalid-feedback">Please enter valid location</div><%# bootstrap %>
      </div>
       <br>
      <button class="btn btn-dark add-new-btn">Edit</button>
    </form>
  </div>
  

